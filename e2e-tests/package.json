{
  "name": "e2e-tests",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "pretest:e2e": "cd .. && yarn db:generate",
    "test": "vitest run",
    "test:unit": "vitest run tests/**/*.test.ts",
    "test:e2e": "node run-with-credentials.js --grep-invert \"@nightly\"",
    "test:e2e:all": "node run-with-credentials.js",
    "test:e2e:ui": "node run-with-credentials.js --ui",
    "test:e2e:headed": "node run-with-credentials.js --headed",
    "test:e2e:debug": "node run-with-credentials.js --debug",
    "test:sso": "node run-with-credentials.js tests/sso",
    "test:sso:ui": "node run-with-credentials.js tests/sso --ui",
    "test:sso:debug": "node run-with-credentials.js tests/sso --debug",
    "test:cft-idam": "node run-with-credentials.js tests/cft-idam",
    "test:cft-idam:ui": "node run-with-credentials.js tests/cft-idam --ui",
    "test:cft-idam:debug": "node run-with-credentials.js tests/cft-idam --debug",
    "playwright:install": "npx playwright install"
  },
  "dependencies": {
    "@hmcts/postgres": "*"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@azure/identity": "4.13.0",
    "@azure/keyvault-secrets": "4.10.0",
    "@playwright/test": "1.57.0",
    "@types/node": "24.10.1",
    "exceljs": "4.4.0",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  }
}
