{% extends "layouts/base-template.njk" %}

{% set title = t.title %}

{% block page_content %}
  <h1 class="govuk-heading-l">{{ t.heading }}</h1>
  <p class="govuk-body">{{ t.description }}</p>
  <p class="govuk-body">{{ t.youCan }}</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>{{ t.checkAddress }}</li>
    <li>{{ t.goBackToStart }} <a href="/" class="govuk-link">{{ t.startPage }}</a> {{ t.andTryAgain }}</li>
  </ul>
  <p class="govuk-body">{{ t.contactPrefix }} <a href="/contact-us" class="govuk-link">{{ t.contactLink }}</a> {{ t.contactSuffix }}</p>
{% endblock %}
