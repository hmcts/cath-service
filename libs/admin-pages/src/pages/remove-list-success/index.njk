{% extends "layouts/base-template.njk" %}

{% block page_content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">

    <div class="govuk-panel govuk-panel--confirmation">
      <h1 class="govuk-panel__title">
        {{ heading }}
      </h1>
      <div class="govuk-panel__body">
        {{ message }}
      </div>
    </div>

    <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-top-6">{{ nextSteps }}</p>

    <p class="govuk-body govuk-!-margin-0 govuk-!-font-weight-bold">
      <a href="/remove-list-search{{ '?lng=cy' if lng == 'cy' else '' }}" class="govuk-link">{{ removeAnotherLink }}</a>
    </p>

    <p class="govuk-body govuk-!-margin-0 govuk-!-font-weight-bold">
      <a href="/manual-upload{{ '?lng=cy' if lng == 'cy' else '' }}" class="govuk-link">{{ uploadFileLink }}</a>
    </p>

    <p class="govuk-body govuk-!-margin-0 govuk-!-font-weight-bold">
      <a href="/admin-dashboard{{ '?lng=cy' if lng == 'cy' else '' }}" class="govuk-link">{{ homeLink }}</a>
    </p>

  </div>
</div>
{% endblock %}
