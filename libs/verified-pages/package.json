{
  "name": "@hmcts/verified-pages",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "production": "./dist/index.js",
      "default": "./src/index.ts"
    },
    "./config": {
      "production": "./dist/config.js",
      "default": "./src/config.ts"
    },
    "./src/assets/css/*": "./src/assets/css/*",
    "./dist/assets/css/*": "./dist/assets/css/*"
  },
  "scripts": {
    "build": "tsc && yarn build:nunjucks && yarn build:assets",
    "build:nunjucks": "mkdir -p dist/pages && cd src/pages && find . -name '*.njk' -exec sh -c 'mkdir -p ../../dist/pages/$(dirname {}) && cp {} ../../dist/pages/{}' \\;",
    "build:assets": "mkdir -p dist/assets && rsync -a --include='*/' --include='*.scss' --include='*.css' --exclude='*' src/assets/ dist/assets/",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@hmcts/subscriptions": "workspace:*"
  },
  "peerDependencies": {
    "express": "^5.2.0"
  }
}
