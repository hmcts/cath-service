{
  "name": "@hmcts/list-types-common",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "production": "./dist/index.js",
      "default": "./src/index.ts"
    },
    "./config": {
      "production": "./dist/config.js",
      "default": "./src/config.ts"
    },
    "./src/assets/js/*": {
      "production": "./dist/assets/js/*",
      "default": "./src/assets/js/*"
    },
    "./src/assets/css/*": {
      "production": "./dist/assets/css/*",
      "default": "./src/assets/css/*"
    }
  },
  "scripts": {
    "build": "tsc && yarn build:nunjucks",
    "build:nunjucks": "mkdir -p dist/views && cd src/views && find . -name '*.njk' -exec sh -c 'mkdir -p ../../dist/views/$(dirname {}) && cp {} ../../dist/views/{}' \\; || true",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "ajv": "8.18.0",
    "exceljs": "4.4.0"
  },
  "devDependencies": {
    "@types/node": "24.10.4",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
