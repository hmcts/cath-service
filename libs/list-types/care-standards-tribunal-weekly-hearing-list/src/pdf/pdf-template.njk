<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ header.listTitle }}</title>
  <style>{{ pdfStyles | safe }}</style>
</head>
<body>
  <div class="header-section">
    <h1>{{ header.listTitle }}</h1>

    <p><a href="{{ t.factLinkUrl }}">{{ t.factLinkText }}</a> {{ t.factAdditionalText }}</p>

    <p class="bold header-date">{{ t.listForWeekCommencing }} {{ header.weekCommencingDate }}</p>
    <p class="header-date">{{ t.lastUpdated }} {{ header.lastUpdatedDate }} {{ t.at }} {{ header.lastUpdatedTime }}</p>
  </div>

  <div class="info-box">
    <h3>{{ t.importantInformationTitle }}</h3>
    <p>{{ t.importantInformationText }}</p>
    <p><a href="{{ t.importantInformationLinkUrl }}">{{ t.importantInformationLinkText }}</a></p>
  </div>

  {% if hearings.length > 0 %}
    <table>
      <thead>
        <tr>
          <th class="no-wrap">{{ t.tableHeaders.date }}</th>
          <th>{{ t.tableHeaders.caseName }}</th>
          <th class="no-wrap">{{ t.tableHeaders.hearingLength }}</th>
          <th class="no-wrap">{{ t.tableHeaders.hearingType }}</th>
          <th>{{ t.tableHeaders.venue }}</th>
          <th>{{ t.tableHeaders.additionalInformation }}</th>
        </tr>
      </thead>
      <tbody>
        {% for hearing in hearings %}
          <tr>
            <td class="no-wrap">{{ hearing.date }}</td>
            <td>{{ hearing.caseName }}</td>
            <td>{{ hearing.hearingLength }}</td>
            <td>{{ hearing.hearingType }}</td>
            <td>{{ hearing.venue }}</td>
            <td>{{ hearing.additionalInformation }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>No hearings scheduled.</p>
  {% endif %}

  <div class="footer">
    {% if dataSource %}
    <p>{{ t.dataSource }}: {{ dataSource }}</p>
    {% endif %}
    <div class="caution-box">
      <p>{{ t.cautionNote }}</p>
      <p>{{ t.cautionReporting }}</p>
    </div>
  </div>
</body>
</html>
