{
  "name": "@hmcts/system-admin-pages",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "production": "./dist/index.js",
      "default": "./src/index.ts"
    },
    "./config": {
      "production": "./dist/config.js",
      "default": "./src/config.ts"
    },
    "./src/assets/css/dashboard.scss": "./src/assets/css/dashboard.scss"
  },
  "scripts": {
    "build": "tsc && yarn build:nunjucks && yarn build:assets",
    "build:nunjucks": "mkdir -p dist/pages && cd src/pages && find . -name '*.njk' -exec sh -c 'mkdir -p ../../dist/pages/$(dirname {}) && cp {} ../../dist/pages/{}' \\;",
    "build:assets": "mkdir -p dist/assets && cp -r src/assets/* dist/assets/",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "peerDependencies": {
    "express": "^5.1.0"
  },
  "dependencies": {
    "@hmcts/auth": "workspace:*",
    "@hmcts/web-core": "workspace:*",
    "papaparse": "5.4.1"
  },
  "devDependencies": {
    "@types/express": "5.0.5",
    "@types/express-session": "1.18.2",
    "@types/papaparse": "5.3.15"
  }
}
