{% extends "layouts/base-template.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">

    <h1 class="govuk-heading-xl">{{ locationsTitle }}</h1>

    <p class="govuk-body">{{ locationsDescription }}</p>

    {% if error %}
      {{ govukErrorSummary({
        titleText: "There is a problem",
        errorList: [
          {
            text: error
          }
        ]
      }) }}
    {% endif %}

    {% if tableRows.length > 0 %}
      {{ govukTable({
        head: [
          {
            text: locationsTableHeadingLocation
          },
          {
            text: locationsTableHeadingPublications,
            format: "numeric"
          }
        ],
        rows: tableRows
      }) }}
    {% else %}
      <p class="govuk-body">No publications found. Publications need to be ingested before they can be viewed here.</p>
    {% endif %}

  </div>
</div>
{% endblock %}
