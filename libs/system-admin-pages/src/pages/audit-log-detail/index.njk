{% extends "layouts/base-template.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block backLink %}
  <a href="/audit-log-list" class="govuk-back-link">{{ backToListText }}</a>
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l" id="top">{{ title }}</h1>

    {{ govukTable({
      rows: [
        [
          { text: userIdLabel },
          { text: log.userId }
        ],
        [
          { text: emailLabel },
          { text: log.userEmail }
        ],
        [
          { text: roleLabel },
          { text: log.userRole }
        ],
        [
          { text: provenanceLabel },
          { text: log.userProvenance }
        ],
        [
          { text: timestampLabel },
          { text: log.timestamp }
        ],
        [
          { text: actionLabel },
          { text: log.action }
        ],
        [
          { text: detailsLabel },
          { text: log.details if log.details else "N/A" }
        ]
      ]
    }) }}

    <p class="govuk-body govuk-!-margin-top-6">
      <a href="#top" class="govuk-link">{{ backToTopText }}</a>
    </p>
  </div>
</div>
{% endblock %}
