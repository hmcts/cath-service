# Server Configuration
PORT=8080

# Base URL for the application (used for SSO redirect URI)
# For local development: http://localhost:8080
# For deployed environments: Set via Helm chart (e.g., https://cath-web.demo.platform.hmcts.net)
BASE_URL=http://localhost:8080

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Redis Configuration
REDIS_URL=redis://localhost:6380

# Azure Key Vault Toggle
# Set to 'true' to load secrets from Azure Key Vault (requires Azure authentication)
# Set to 'false' or omit to use .env file only
# Note: In production (Kubernetes), Azure Key Vault is always used regardless of this setting
AZURE_KEYVAULT_TEST_MODE=false

# SSO Configuration (Azure AD)
# For local development: Set these values directly (when AZURE_KEYVAULT_TEST_MODE=false)
# For deployed environments: Automatically loaded from Azure Key Vault (pip-ss-kv-{ENV})

# Azure AD OpenID Connect metadata endpoint
SSO_IDENTITY_METADATA=https://login.microsoftonline.com/{tenant-id}/v2.0/.well-known/openid-configuration

# Azure AD application (client) ID
SSO_CLIENT_ID=your-client-id

# Azure AD application client secret
SSO_CLIENT_SECRET=your-client-secret

# Allow HTTP redirect for local development (set to false in production)
SSO_ALLOW_HTTP_REDIRECT=true

# Azure AD Security Group IDs for role-based access control
# System Admin Group ID
SSO_SYSTEM_ADMIN_GROUP_ID=your-system-admin-group-id

# Internal Admin CTSC Group ID
SSO_INTERNAL_ADMIN_CTSC_GROUP_ID=your-ctsc-admin-group-id

# Internal Admin Local Group ID
SSO_INTERNAL_ADMIN_LOCAL_GROUP_ID=your-local-admin-group-id

# Application Insights (Optional)
APPLICATION_INSIGHTS_CONNECTION_STRING=InstrumentationKey=your-instrumentation-key;IngestionEndpoint=https://dc.services.visualstudio.com/
