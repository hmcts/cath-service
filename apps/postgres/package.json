{
  "name": "@hmcts/postgres",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "production": "./dist/index.js",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "yarn collate && prisma generate --no-hints && tsc",
    "collate": "tsx src/collate-schema.ts",
    "generate": "yarn collate && prisma generate --no-hints",
    "migrate": "yarn collate && prisma migrate deploy",
    "migrate:dev": "yarn collate && prisma migrate dev",
    "migrate:reset": "yarn collate && prisma migrate reset",
    "seed": "node ../../node_modules/.bin/tsx prisma/seed.ts",
    "studio": "yarn collate && prisma studio",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "prisma": {
    "seed": "node ../../node_modules/.bin/tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "pg": "8.16.3"
  },
  "devDependencies": {
    "@types/pg": "8.11.11",
    "dotenv": "^17.2.3",
    "glob": "13.0.6",
    "prisma": "7.2.0"
  }
}
