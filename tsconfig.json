{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@hmcts/api": ["apps/api/src"],
      "@hmcts/crons": ["apps/crons/src"],
      "@hmcts/postgres": ["apps/database/src"],
      "@hmcts/web": ["apps/web/src"],
      "@hmcts/shared": ["libs/shared/src"],
      "@hmcts/cloud-native-platform": ["libs/cloud-native-platform/src"],
      "@hmcts/simple-router": ["libs/simple-router/src"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false
  }
}
